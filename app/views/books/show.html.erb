<div>
  <%= flash[:notice] %>
</div>
<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'index',user: @book.user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(100,100) %><br>
              <%= link_to @book.user.name, user_path(@book.user) %>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <td id="favorite_btn_<%= @book.id %>">
              <%= render "favorites/btn", book: @book %>
            </td>
            <td id="comment_count">
              コメント数：<%= @book.book_comments.count %>
            </td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book) , class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" ,class: "btn btn-sm btn-danger "%></td>
            <% end %>
          </tr>
        </tbody>
      </table>
        <div id="book_comments">
          <%= render "book_comments/comment", book: @book, book_comment: @book_comment %>
        </div>
        <div id="comment-form">
          <%= render "book_comments/form", book: @book, book_comment: @book_comment %>
        </div>
    </div>
  </div>
</div>
